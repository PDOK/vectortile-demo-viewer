{
    "version": 8,
    "name": "BAG Visualisation",
    "id": "1",
    "zoom": 12,
    "pitch": 50,
    "center": [
        0,
        0
    ],
    "sprite": "styles/standaardsprites/sprites",
    "glyphs": "styles/font/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "fill woonplaats",
            "type": "fill",
            "fill-color":"transparent",
            "fill-opacity": 1.0, 
            "source": "bag",
            "source-layer": "woonplaats"
        },
        {
            "id": "outline woonplaats",
            "type": "line",
            "paint": {
                "line-color": "rgb(170, 170, 170)",
                "line-width": 2
            },
            "source": "bag",
            "source-layer": "woonplaats"
        },
        {
            "id": "standplaats",
            "type": "fill",
            "paint": {
                "fill-color": "rgb(220, 169, 208)"                          
            },
            "source": "bag",
            "source-layer": "standplaats"
        },
        {
            "id": "outline standplaats",
            "type": "line",
            "paint": {
                "line-color": "rgb(85,85,85)",
                "line-width": 0.5
            },
            "source": "bag",
            "source-layer": "standplaats"
        },
        {
            "id": "pand",
            "type": "fill",
            "paint": {
                "fill-color": "#CCCCCC",
                "fill-outline-color": "#626262",
                "fill-opacity": 0.5
            },
            "source": "bag",
            "source-layer": "pand"
        },
        {
            "id": "outline pand",
            "type": "line",
            "paint": {
                "line-color": "#626262",
                "line-width": 2
            },
            "source": "bag",
            "source-layer": "pand"
        },
        {
            "id": "ligplaats",
            "type": "fill",
            "paint": {
                "fill-color": "#96D1E3",
                "fill-outline-color": "#555555",
                "fill-opacity": 0.35
            },
            "source": "bag",
            "source-layer": "ligplaats"
        },
        {
            "id": "outline ligplaats",
            "type": "line",
            "paint": {
                "line-color": "#555555",
                "line-width": 0.5
            },
            "source": "bag",
            "source-layer": "ligplaats"
        },
        {
            "id": "verblijfsobject outline",
            "type": "circle",
            "paint": {
                "circle-color": "#000000", 
                "circle-radius": 10
            },
            "source": "bag",
            "source-layer": "verblijfsobject"
        } , 
        {
            "id": "verblijfsobject fill",
            "type": "circle",
            "paint": {
                "circle-color": "#FF9900", 
                "circle-radius": 7
            },
            "source": "bag",
            "source-layer": "verblijfsobject"
        } 
        
      
      
        
    ],
    "sources": {
        "bag": {
            "type": "vector",
            "tiles": [
                "https://api.pdok.nl/lv/bag/ogc/v0_1/tiles/NetherlandsRDNewQuad/{z}/{x}/{y}"
            ]
        }
    }
}