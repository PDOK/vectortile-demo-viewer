{
  "version": 8,
  "name": "",
  "id": "kadastrale kaart kwaliteitsvissualisatie webmercatorquad",
  "metadata": {
    "ol:webfonts": "https://pdok.github.io/vectortile-demo-viewer/styles/fonts/{font-family}/{fontweight}{-fontstyle}.css",
    "gokoala:title-items": "id"
  },

  "center": [],
  "pitch": 0,
  "sources": {
    "dkk": {
      "type": "vector",
      "tiles": [
        "https://api.pdok.nl/kadaster/kadastralekaart/ogc/v1-demo/tiles/WebMercatorQuad/{z}/{y}/{x}?f=mvt"
      ],
      "minzoom": 12,
      "maxzoom": 12
    }
  },
   "glyphs": "https://pdok.github.io/vectortile-demo-viewer/styles/brk/fonts/{fontstack}/{range}.pbf",

  "layers": [
    {
      "id": "Bebouwing",
      "type": "fill",
      "source": "dkk",
      "source-layer": "pand",
      "paint": { "fill-color": "#E6E6E6", "fill-outline-color": "#CDCDCD" }
    },

    {
      "id": "Kwaliteitslabel Onbekend",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["in", "type_grens_waarde", "Voorlopig", "Administratief"],
      "layout": { "line-join": "round" },
      "paint": {
        "line-dasharray": [4, 2],
        "line-color": "#bbbbbb",
        "line-width": 1.5
      }
    },
    {
      "id": "Kwaliteitslabel E",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "classificatie_kwaliteit_waarde", "E"],
      "paint": { "line-color": "#fe9c33", "line-width": 1.5 }
    },
    {
      "id": "Kwaliteitslabel D",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "classificatie_kwaliteit_waarde", "D"],
      "paint": { "line-color": "#fed98e", "line-width": 1.5 }
    },
    {
      "id": "Kwaliteitslabel C",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "classificatie_kwaliteit_waarde", "C"],
      "paint": { "line-color": "#bae4bc", "line-width": 1.5 }
    },
    {
      "id": "Kwaliteitslabel B",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "classificatie_kwaliteit_waarde", "B"],
      "paint": { "line-color": "#008200", "line-width": 1.5 }
    },

    {
      "id": "Bijpijling",
      "type": "line",
      "source": "dkk",
      "source-layer": "perceel_bijpijling",
      "paint": { "line-color": "#000001", "line-width": 1 }
    },

    {
      "id": "Nummeraanduidingreeks",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "pand_nummeraanduiding",

      "layout": {
        "text-field": "{tekst}",
        "text-size": {
          "stops": [
            [17, 46],
            [18, 7],
            [19, 8],
            [20, 11],
            [21, 13]
          ]
        },
        "text-rotate": ["get", "hoek"],

        "text-font": [
          "Liberation Sans",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],
        "text-allow-overlap": true,
        "icon-allow-overlap": true,
        "symbol-placement": "line-center"
      },
      "paint": { "text-color": "#797979" }
    },
    {
      "id": "Water openbareruimtelabel",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "openbareruimtelabel",
      "paint": {
        "text-color": "#000000"
      },
      "filter": [
        "all",
        ["==", "openbare_ruimte_type", "Water"],
        ["==", "bgt_status", "bestaand"]
      ],
      "layout": {
        "text-field": "{tekst}",
        "text-font": [
          "Liberation Sans Italic",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],

        "text-size": {
          "stops": [
            [17, 11],
            [18, 11],
            [19, 12],
            [20, 14]
          ]
        },
        "text-rotate": ["-", 360, ["get", "mshoek"]]
      }
    },
    {
      "id": "Weg openbareruimtelabel",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "openbareruimtelabel",
      "paint": {
        "text-color": "#000000"
      },
      "filter": [
        "all",
        ["==", "openbare_ruimte_type", "Weg"],
        ["==", "bgt_status", "bestaand"]
      ],
      "layout": {
        "text-field": "{tekst}",
        "text-font": [
          "Liberation Sans",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],
        "text-size": {
          "stops": [
            [17, 11],
            [18, 11],
            [19, 12],
            [20, 14]
          ]
        },
        "text-rotate": ["-", 360, ["get", "mshoek"]]
      }
    },
    {
      "id": "Perceel label",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "perceel_label",
      "layout": {
        "text-field": "{perceelnummer}",
        "text-allow-overlap": true,
        "icon-allow-overlap": true,
        "text-size": {
          "stops": [
            [17, 9],
            [18, 9],
            [19, 12],
            [20, 14],
            [21, 15]

          ],
          "default": 15
        },
        "text-font": [
          "Liberation Sans Italic",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": {
          "stops": [
            [17, 10],
            [18, 10],
            [19, 13],
            [20, 15],
            [21, 16]
          ]
        }
      }
    }
  ]
}

