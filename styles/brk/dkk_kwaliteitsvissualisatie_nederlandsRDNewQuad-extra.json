{
  "version": 8,
  "name": "",
  "id": "kadastrale kaart kwaliteitsvissualisatie",
  "metadata": {
    "ol:webfonts": "http://localhost:4200/assets/fonts/{font-family}/{fontweight}{-fontstyle}.css",
    "gokoala:title-items": "id"
  },
  "center": [],
  "pitch": 0,
  "sources": {
    "dkk": {
      "type": "vector",
      "tiles": [
        "https://api.pdok.nl/kadaster/kadastralekaart/ogc/v5-preprod/tiles/NetherlandsRDNewQuad/{z}/{y}/{x}?f=mvt"
      ],
      "minzoom": 12,
      "maxzoom": 12
    }
  },

  "layers": [



    {
      "id": "Bebouwing",
      "type": "fill",
      "source": "dkk",
      "source-layer": "pand",
      "paint": { "fill-color": "#E6E6E6", "fill-outline-color": "#CDCDCD" }
    },
    {
      "id": "Perceel",
      "type": "fill",
      "source": "dkk",
      "source-layer": "perceel",
      "paint": {
        "fill-outline-color": "#000001",
        "fill-color": "rgba(0, 0, 0, 0)"
      }
    },
    {
      "id": "Nummeraanduidingreeks",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "pand_nummeraanduiding",

      "layout": {
        "text-field": "{tekst}",
        "text-size": {
          "stops": [
            [12, 4],
            [13, 6],
            [14, 10],
            [15, 14]
          ]
        },
        "text-rotate": ["-", 360, ["get", "hoek"]],

        "text-font": [
          "liberation-sans",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],
        "symbol-placement": "line-center"
      },
      "paint": { "text-color": "#797979" }
    },
    {
      "id": "Water openbareruimtelabel",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "openbareruimtelabel",
      "paint": {
        "text-color": "#002750"
      },
      "filter": [
        "all",
        ["==", "openbareruimtetype", "Water"],
        ["==", "status", "bestaand"]
      ],
      "layout": {
        "text-field": "{openbareruimtenaam}",
        "text-font": [
          "liberation-sans-italic",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],

        "text-size": 15,
        "text-rotate": ["-", 360, ["get", "hoek"]]
      }

    }


  ]
}
