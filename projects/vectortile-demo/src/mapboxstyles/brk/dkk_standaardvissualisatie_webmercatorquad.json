{
  "version": 8,
  "name": "Kadastrale kaart standaardvissualisatie webmercatorquad",
  "metadata": {
    "ol:webfonts": "https://pdok.github.io/vectortile-demo-viewer/styles/fonts/{font-family}/{fontweight}{-fontstyle}.css",
    "gokoala:title-items": "id"
  },
  "center": [],
  "pitch": 0,
  "sources": {
    "dkk": {
      "type": "vector",
      "tiles": [
        "https://api.pdok.nl/kadaster/brk-kadastrale-kaart/ogc/v1-demo/tiles/WebMercatorQuad/{z}/{y}/{x}?f=mvt"
      ]

    }
  },
  "glyphs": "https://pdok.github.io/vectortile-demo-viewer/styles/brk/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "Bebouwing",
      "type": "line",
      "source": "dkk",
      "source-layer": "pand",
      "paint": {
        "line-color": "#C10101",
        "line-width": 1

      }
    },
    {
      "id": "Nummeraanduidingreeks",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "pand_nummeraanduiding",

      "layout": {
        "text-field": "{tekst}",
        "text-size": {
          "stops": [
            [17, 6],
            [18, 7],
            [19, 8],
            [20, 11],
            [21, 13]

          ]
        },
        "text-rotate": ["get", "hoek"],

        "text-font": [
          "Liberation Sans",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],
        "text-allow-overlap": true,
        "icon-allow-overlap": true

      },
      "paint": { "text-color": "#C10101" }
    },
    {
      "id": "Water openbareruimtelabel",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "openbareruimtelabel",
      "paint": {
        "text-color": "#000000"
      },
      "filter": [
        "all",
        ["==", "openbare_ruimte_type", "Water"],
        ["==", "bgt_status", "bestaand"]
      ],
      "layout": {
        "text-field": "{tekst}",
        "text-font": [
          "Liberation Sans Italic",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],

        "text-size": {
          "stops": [
            [17, 11],
            [18, 11],
            [19, 12],
            [20, 14]
          ]
        },
        "text-rotate": ["-", 360, ["get", "mshoek"]]
      }
    },
    {
      "id": "Weg openbareruimtelabel",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "openbareruimtelabel",
      "paint": {
        "text-color": "#000000"
      },
      "filter": [
        "all",
        ["==", "openbare_ruimte_type", "Weg"],
        ["==", "bgt_status", "bestaand"]
      ],
      "layout": {
        "text-field": "{tekst}",
        "text-font": [
          "Liberation Sans",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ],
        "text-size": {
          "stops": [
            [17, 11],
            [18, 11],
            [19, 12],
            [20, 14]
          ]
        },
        "text-rotate": ["-", 360, ["get", "mshoek"]]
      }
    },
    {
      "id": "Bijpijling",
      "type": "line",
      "source": "dkk",
      "source-layer": "perceel_bijpijling",
      "paint": {"line-color": "#000001", "line-width": 1}
    },
    {
      "id": "Kadastrale grens Voorlopig",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "type_grens_waarde", "Voorlopig"],
      "paint": {"line-color": "#CC9900", "line-width": 1.5}
    },
    {
      "id": "Kadastrale grens Administratief",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "type_grens_waarde", "Administratief"],
      "paint": {"line-color": "#5CF6D1", "line-width": 1.5}
    },
    {
      "id": "Kadastrale grens Definitief",
      "type": "line",
      "source": "dkk",
      "source-layer": "kadastrale_grens",
      "filter": ["==", "type_grens_waarde", "Definitief"],
      "paint": {"line-color": "#000001", "line-width": 1.5}
    },
    {
      "id": "Perceel Label",
      "type": "symbol",
      "source": "dkk",
      "source-layer": "perceel_label",
      "layout": {
        "text-field": "{perceelnummer}",
        "text-allow-overlap": true,
        "icon-allow-overlap": true,
        "text-size": {
          "stops": [
            [17, 8],
            [18, 8],
            [19, 9],
            [20, 12],
            [21, 14]
          ],
          "default": 14
        },
        "text-font": [
          "Liberation Sans Italic",
          "system-ui",
          "Roboto",
          "Arial",
          "Noto Sans",
          "Liberation Sans",
          "sans-serif",
          "Noto Color Emoji"
        ]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": {
          "stops": [
            [17, 6],
            [18, 6],
            [19, 12],
            [20, 14],
            [21, 16]
          ]
        }
      }
    }

  ],
  "id": ""
}
